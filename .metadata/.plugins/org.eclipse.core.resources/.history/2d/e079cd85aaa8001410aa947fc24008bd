#include <iostream>
#include <unistd.h>
#include <vector>
#include <cstring>
#include <string>
#include <sys/wait.h>
#include <string>
#include <chrono>
#include "terminal.h"

using namespace std;

int main(int argc, char **argv) {
	char input[1024];
	while(true){
		std::cout << "RoninShell->>> ";
		std::string line = "stuff";
		std::getline(std::cin,line);
		std::vector<std::string> data = parse(line);
		std::vector<std::string> history;
		//for(std::string s : data)
		//	std::cout << s << std::endl;
		auto start = std::chrono::system_clock::now();
		switch(switchVal(data[0])){
		//Quit
		case(0):
		{
			exit(0);
			break;
		};
		//History
		case(1):
		{

			break;
		};
		//PTime
		case(2):
		{

			break;
		};
		//Regular Command
		default:
		{
			auto pid = fork();
			if(pid < 0){
				cerr << "Could not fork " << std::endl;
			}
			if (pid ==0){
				std::cout << "child" << std::endl;
				std::vector<char*> arg;
				arg.push_back(strdup(line.c_str())); //need to pass in the first command
				arg.push_back(nullptr); //terminate with nullptr
				//const char* args = &data[0];
				execvp("ls", argv);
			} else {
				std::cout << "parent " << pid << std::endl;
			}
			//wait for pid to finish
			waitpid(pid, nullptr, 0);
			auto stop = std::chrono::system_clock::now();
			std::chrono::microseconds time = stop - start;
			std::cout << "Process Time Taken: " << time.count()/1000000 << " Seconds, " << time.count/1000 << " Milliseconds, and " << time.count() << " Microseconds" << std::endl;
		};
		}
	}
}
